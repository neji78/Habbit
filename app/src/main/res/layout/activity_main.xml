<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/material_dynamic_tertiary20">
            <ImageButton
                android:id="@+id/dropdown_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="منو"
                android:src="@drawable/menu_fill0_wght400_grad0_opsz48"
                android:background="?android:selectableItemBackground"
                app:tint="@color/white"
                android:layout_gravity="left"
                />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="فیلتر"
                android:src="@drawable/filter_alt_fill0_wght400_grad0_opsz48"
                android:background="?android:selectableItemBackground"
                app:tint="@color/white"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                />
            <ImageButton
                android:id="@+id/add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="افزودن روتین"
                android:src="@drawable/add_fill0_wght400_grad0_opsz48"
                android:background="?android:selectableItemBackground"
                app:tint="@color/white"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/routine_date_label"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/routine_name_label"
                    android:gravity="left"
                    />
            </LinearLayout>

            <TableLayout
                android:id="@+id/table_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TableLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/routine_recycler_view_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>